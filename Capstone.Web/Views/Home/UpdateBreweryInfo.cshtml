



<h1>update brewery!</h1>




<div class="jumbotron">

    <form method="post" action="@Url.Action("UpdateBreweryInfo","Home")">
        <div class="form-group row">
            <label for="exampleTextarea" class="col-2 col-form-label">Brewery History</label>
            <textarea class="form-control col-8" name="history" id="exampleTextarea" rows="3"></textarea>
        </div>

        <div class="form-group row">
            <label for="example-text-input" class="col-2 col-form-label">Address</label>
            <div class="col-8">
                <input class="form-control" name="address" type="text" id="example-text-input">
            </div>
        </div>

        <div class="form-group row">
            <label for="example-text-input" class="col-2 col-form-label">Contact</label>
            <div class="col-8">
                <input class="form-control" type="text" name="cname" id="example-text-input">
            </div>
        </div>

        <div class="form-group row">
            <label for="example-email-input" class="col-2 col-form-label">Contact Email</label>
            <div class="col-8">
                <input class="form-control" type="email" name="email" id="example-email-input">
            </div>
        </div>

        <div class="form-group row">
            <label for="example-tel-input" class="col-2 col-form-label">Contact Phone</label>
            <div class="col-8">
                <input class="form-control" type="tel" name="phone" id="example-tel-input">
            </div>
            <button id="newbrewsubmit" type="submit" class="btn btn-block btn-success btn-lg">Large button</button>

        </div>

    </form>



</div>
